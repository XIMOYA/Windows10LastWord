<Window
    x:Class="Windows10LastWord.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid x:Name="BackgroundGridOld" />
        <Grid x:Name="BackgroundGridNew" Opacity="0" />

        <Grid x:Name="ShutdownScreen" Visibility="Collapsed" Opacity="0" Background="#FF0078D7">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                <Viewbox Width="40" Height="40">
                    <Canvas x:Name="DotCanvas" Width="160" Height="160">
                    </Canvas>
                </Viewbox>

                <TextBlock Text="正在关机" 
                           Foreground="White" 
                           FontSize="20" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
